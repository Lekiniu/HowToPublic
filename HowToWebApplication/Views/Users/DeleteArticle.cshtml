        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.isBlocked)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isBlocked)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.users.name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.users.name)
        </dd>

        <dt>
            Categories
        </dt>

        <dd>
            @foreach (var cat in Model.articleCategories)
            {
                foreach (var category in ViewBag.Categories)
                {
                    if (cat.categoriesId == category.Id)
                    {
                        @category.name <text>&nbsp;</text>
                    }
                }

            }
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "ArticlesList", new { id = LoginHelper.CurrentUser().Id })
        </div>
    }
