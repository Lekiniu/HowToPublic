</p>
<table class="table">
    <tr>
        <th>
            Category
        </th>
        <th>
             Parent Category
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.categories2.name)
        </td>
